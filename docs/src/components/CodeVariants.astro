---
import {Code, Tabs, TabItem } from '@astrojs/starlight/components'

type Props = {
    variants: CodeProps[],
    syncKey?: string
}

type CodeProps = {
    code: string
    lang: string
    label: string
    title: string
}

const {variants, syncKey} = Astro.props
---

<Tabs syncKey={syncKey}>
    {variants.map(({code, lang, label, title}) => (
            <TabItem label={label}>
                <Code code={code} lang={lang} title={title}/>
            </TabItem>
    ))}
</Tabs>